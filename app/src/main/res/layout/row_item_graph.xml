<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:padding="15dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_gravity="end"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:text="@string/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/close"
        android:layout_gravity="end"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:textColor="@color/purple_700"
        android:padding="10dp"
        android:text="@string/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/message"
        android:layout_gravity="end"
        android:textSize="15sp"
        android:visibility="gone"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:padding="10dp"
        android:text="@string/no_enough_data_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.cityaqi.ui.widget.ValueLineChart
        android:id="@+id/linechartinner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:startColor="@color/progress_finish_color"
        app:centerColor="@color/progress_finish_color_center"
        app:endColor="@color/progress_finish_color_end"
        app:egActivateIndicatorShadow="false"
        app:egCurveSmoothness="0.4"
        app:egIndicatorLineColor="@color/black"
        app:egIndicatorTextColor="@color/black"
        app:egIndicatorTextUnit=""
        app:egLegendHeight="30dp"
        app:egUseCubic="false"
        app:egUseDynamicScaling="false"
        app:egUseOverlapFill="true" />

</LinearLayout>